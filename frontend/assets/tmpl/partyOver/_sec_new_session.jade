section#new_session
    .session__title__background
        .container
            h1.session__title SESSION
            h2.session__subtitle セッション
    .session__content__background
        .container
            div.session__lists
                - var speaker = speaker_lists[0]
                div(class="session__list--" + speaker.field).session__list
                    .session__list__img(style="background-image: url('./../img/speaker/" + speaker.photo + "')")
                    p.session__list__text
                        span #{speaker.title}
                        if speaker.slide
                            a.session__list__link(href="" +speaker.slide target="_blank") 登壇資料
                div(style="width:45%")
                each speaker in speaker_lists.slice(1)
                    div(href="./session.html#"+speaker.id class="session__list--" + speaker.field).session__list
                        .session__list__img(style="background-image: url('./../img/speaker/" +speaker.photo + "')")
                        p.session__list__text
                            span #{speaker.title}
                            if speaker.slide
                                a.session__list__link(href="" +speaker.slide target="_blank") 登壇資料